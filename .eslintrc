{
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "extends": [
        "plugin:vue/recommended",
        "plugin:vue/essential",
        "@vue/airbnb"
    ],
    "rules": {
        "vue/singleline-html-element-content-newline": "off",
        "vue/max-attributes-per-line": "off",
        "vue/multiline-html-element-content-newline": "off",
        "no-new": "off",
        "max-len": ["error", 200],
        "indent": ["error", 4],
        "no-console": "off",
        "no-alert": "off",
        "no-plusplus": "off",
        "linebreak-style": "off"
    }
}